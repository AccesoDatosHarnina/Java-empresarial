package modelo.implementation;

import java.sql.ResultSet;
import java.sql.ResultSetMetaData;
import java.util.ArrayList;
import java.util.Collection;

import modelo.abstractDAO.PersonaDAO;
import modelo.acceso.AccessJdbc;
import modelo.entity.PersonaDTO;

public class PersonaDAOJdbc implements PersonaDAO {

	private AccessJdbc accessJdbc;

	public PersonaDAOJdbc(AccessJdbc accessJdbc) {
		super();
		this.accessJdbc = accessJdbc;
	}

	@Override
	public void create(PersonaDTO entidad) {
		// TODO Auto-generated method stub
	}

	@Override
	public Collection<PersonaDTO> findAll() {
		ResultSet conjuntoResultados = accessJdbc.execute("SELECT * FROM persona");
		Collection<PersonaDTO> personas = new ArrayList<>();
		try {
			int numeroDeColumnas = conjuntoResultados.getMetaData().getColumnCount();
			while (conjuntoResultados.next()) {
				Object[] resultado = new Object[numeroDeColumnas];
				for (int i = 1; i <= numeroDeColumnas; i++)
					resultado[i-1] = conjuntoResultados.getObject(i);
				personas.add(new PersonaDTO(resultado));
			} 
		} catch (Exception e) {
			return null;
		}
		return personas;
	}

	@Override
	public PersonaDTO findById(Integer id) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public PersonaDTO findByName(String name) {
		// TODO Auto-generated method stub
		return null;
	}

}
